{
  "name": "movingbrasil-protractor-test",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Teste automatizado com as ferramentas Cucumber, Protractor, TypeScript, Moving Brasil.",
  "homepage": "https://github.com/fcffc/movingbrasil-protractor-test.git",
  "keywords": [
    "protractor",
    "cucumber",
    "typescript",
    "angular",
    "angularjs",
    "testing",
    "behaviour driven development",
    "bdd",
    "selenium",
    "webdriverJS",
    "gherkin",
    "automation testing"
  ],
  "main": "index.js",
  "scripts": {
    "build": "npm run tsc",
    "clean": "npm run rimraf -- typeScript/",
    "clean-build": "npm run clean && npm run build",
    "prelocal-test": "npm run build",
    "preremote-test": "npm run build",
    "local-test": "npm run concurrently -- --kill-others \"npm run webdriver-start\" \"sleepms 12000 && protractor typeScript/config/config.js & npm run junit-test\"",
    "junit-test": "./node_modules/.bin/cucumber-js --format=json | \"./node_modules/.bin/cucumber-junit\" > reports/junit/cucumber_report.xml",
    "remote-test": "npm run protractor -- typeScript/config/config.js & npm run junit-test",
    "test": "echo \"Escolha qual modo irá utilizar 'npm run local-test' (com o servidor do selenium iniciado simultaneamente) ou 'npm run remote-test' (informando o endereço do selenium server)\"",
    "webdriver-update": "npm run webdriver-manager -- update",
    "webdriver-start": "npm run webdriver-manager -- start",
    "postinstall": "npm run webdriver-manager -- update",
    "start": "npm run test",
    "concurrently": "./node_modules/.bin/concurrently",
    "tsc": "./node_modules/.bin/tsc",
    "rimraf": "./node_modules/.bin/rimraf",
    "protractor": "./node_modules/.bin/protractor",
    "cross-env": "./node_modules/.bin/cross-env",
    "webdriver-manager": "./node_modules/.bin/webdriver-manager",
    "cucumber-js": "./node_modules/.bin/cucumber-js",
    "cucumber-junit": "./node_modules/.bin/cucumber-junit"
  },
  "author": "Fernanda Ferreira",
  "devDependencies": {
    "@types/cucumber": "^2.0.4",
    "@types/node": "^8.0.3",
    "@types/selenium-webdriver": "^3.0.7",
    "chai": "^4.0.2",
    "chai-as-promised": "^7.0.0",
    "concurrently": "^3.5.0",
    "cross-env": "^5.1.0",
    "cucumber": "^3.0.4",
    "cucumber-html-reporter": "^3.0.4",
    "cucumber-junit": "^1.7.0",
    "mkdirp": "^0.5.1",
    "protractor": "^5.1.2",
    "protractor-cucumber-framework": "^4.0.8",
    "rimraf": "^2.6.2",
    "sleep-ms": "^2.0.1",
    "ts-node": "^3.3.0",
    "typescript": "^2.5.3"
  },
  "repository": "https://github.com/fcffc/movingbrasil-protractor-test.gitt"
}
